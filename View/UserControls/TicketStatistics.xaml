<UserControl x:Class="Fitness.View.UserControls.TicketStatistics"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fitness.View.UserControls"
             xmlns:converters="clr-namespace:Fitness.Common.Converters;assembly=Fitness.Common"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <converters:DataGridRowNumberConverter x:Key="DataGridRowNumberConverter"/>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0"
                   Grid.Column="0"
                   Content="Filters"/>
            <CheckBox Grid.Row="1"
                      Grid.Column="0"
                      x:Name="CheckBoxActive"
                      Content="Active tickets"
                      IsChecked="{Binding ActiveChecked, Mode=TwoWay}"/>
            <CheckBox Grid.Row="2"
                      Grid.Column="0"
                      x:Name="CheckBoxInactive"
                      Content="Inactive tickets"
                      IsChecked="{Binding InactiveChecked, Mode=TwoWay}"/>
            <Button Grid.Row="3"
                Grid.Column="0"
                Content="Search"
                Width="80"
                Height="25"
                Margin="5"
                HorizontalAlignment="Center"
                Command="{Binding ListTicketStatisticsCommand}"/>

        </Grid>
        <DataGrid Margin="5"
                ItemsSource="{Binding Tickets, Mode=TwoWay}"
                AutoGenerateColumns="False"
                IsReadOnly="True">
            
             <DataGrid.Columns>
                <DataGridTextColumn Header="Type"
                                    Width="auto"
                                    Binding="{Binding Type}"/>
                <DataGridTextColumn Header="Buying date"
                                    Width="*"
                                    Binding="{Binding BuyingDate}"/>
                <DataGridTextColumn Header="Last using date"
                                    Width="*"
                                    Binding="{Binding ExpirationDate}"/>
                <DataGridTextColumn Header="Login number"
                                    Width="*"
                                    Binding="{Binding MaxLoginNumber}"/>
                <DataGridTextColumn Header="Price"
                                    Width="*"
                                    Binding="{Binding Price}"/>
                <DataGridTextColumn Header="Status"
                                    Width="auto"
                                    Binding="{Binding Status}"/>
            </DataGrid.Columns>
            <DataGrid.RowHeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Converter={StaticResource DataGridRowNumberConverter}}"
                                Margin="2,0,2,0"/>
                </DataTemplate>
            </DataGrid.RowHeaderTemplate>
        </DataGrid>
    </StackPanel>
</UserControl>
